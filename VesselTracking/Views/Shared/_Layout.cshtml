<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--customise style from bootwatch -->
    <link href="~/Content/readable.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css" />
    <link href='https://api.mapbox.com/mapbox.js/v3.1.1/mapbox.css' rel='stylesheet' />
    <script type='text/javascript' src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'></script>
    <script type='text/javascript' src='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js'></script>

    <script src='https://api.mapbox.com/mapbox.js/v3.1.1/mapbox.js'></script>
    


</head>
<body>

    <!-- Begin NavBar -->
    <div class="navbar navbar navbar-fixed-top navbar-inverse"  role="navigation">
        <!-- inverse cant change colors -->
        <div class="container">
            <div class="navbar-header navbar-inner">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- comback to main map-->
                <a class="logo" href="@Url.Action("Index","Map")"
                   style="height: 150px;">
                    <img src="~/Content/Images/logo.png"
                         class="img-responsive" alt="" style="max-width: 200px; width: 100%; max-height: 100%;">
                </a>
            </div>

            <!--responisve layout -->
            <div class="nav-collapse">
                <ul class="nav navbar-nav navbar">
                    <li>
                        <a href="@Url.Action("Index","Map")">
                            <span class="glyphicon glyphicon-globe"> LiveTracking</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Port","Port")">
                            <span class="glyphicon glyphicon-search"> Ports</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Vessels","Vessels")">
                            <span class="glyphicon glyphicon-search"> Vessels</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("ContactUs","Contact")">
                            <span class="glyphicon glyphicon-envelope"> ContactUs</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","AISMap")">
                            <span class="glyphicon glyphicon-envelope"> AIS Map</span>
                        </a>
                    </li>
                </ul>
                <!--display search button on naviganion -->
                @*<form class=" navbar-search pull-right input-append ">
                        <input class="span2" id="appendedInputButtons"type="search">
                        <span class="glyphicon glyphicon-search"></span>
                    </form>*@
            </div><!--/.nav-collapse -->
        </div>
    </div>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer> 
           
                <div class="container">
                    <div class=" row ">
                        <div class="col"
                    </div>
                    <p>&copy; @DateTime.Now -Vessels Tracking</p>
                </div>
            
    </footer>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
